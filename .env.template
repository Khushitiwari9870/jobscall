# Jobscall Environment Configuration
# Copy this file to /etc/jobscall/.env and update the values

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
# Use DJANGO_ALLOWED_HOSTS for settings parsing in production (comma separated)
DJANGO_ALLOWED_HOSTS=147.93.111.128,jobscall.in,www.jobscall.in

# CORS / CSRF trusted origins (comma separated). Example: https://jobscall.in,http://localhost:3000
CORS_ALLOWED_ORIGINS=https://jobscall.in
CSRF_TRUSTED_ORIGINS=https://jobscall.in

# Database (SQLite for development)
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration (Update with actual SMTP settings)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret

# Other API Keys (Add as needed)
GOOGLE_ANALYTICS_ID=your-ga-id
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code

# Frontend settings (Next.js public env)
# NEXT_PUBLIC_API_URL should point to your backend API base (e.g. https://jobscall.in or empty to use same origin)
NEXT_PUBLIC_API_URL=https://jobscall.in

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Admin Settings
ADMIN_EMAIL=admin@jobscall.in
