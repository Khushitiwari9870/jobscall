{
  "openapi": "3.0.0",
  "info": {
    "title": "Jobscall API",
    "version": "1.0.0",
    "description": "Comprehensive API documentation for Jobscall platform",
    "contact": {
      "email": "contact@jobscall.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Local development server"
    },
    {
      "url": "https://api.jobscall.com/v1",
      "description": "Production server"
    }
  ],
  "tags": [
    {"name": "Authentication", "description": "User authentication and authorization"},
    {"name": "Users", "description": "User management and profiles"},
    {"name": "Jobs", "description": "Job postings and applications"},
    {"name": "Companies", "description": "Company profiles and management"},
    {"name": "Search", "description": "Search functionality"},
    {"name": "Matching", "description": "Job matching algorithms"},
    {"name": "Notifications", "description": "User notifications"}
  ],
  "paths": {
    "/auth/jwt/token/": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Obtain JWT token",
        "description": "Get JWT token for authentication",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {"type": "string"},
                  "password": {"type": "string", "format": "password"}
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "JWT token pair",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "refresh": {"type": "string"},
                    "access": {"type": "string"}
                  }
                }
              }
            }
          },
          "401": {"description": "Invalid credentials"}
        }
      }
    },
    "/users/": {
      "get": {
        "tags": ["Users"],
        "summary": "List users",
        "description": "Get a list of all users (admin only)",
        "security": [{"Bearer": []}],
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/jobs/": {
      "get": {
        "tags": ["Jobs"],
        "summary": "List job postings",
        "description": "Get a list of available job postings",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Search term for job title or description",
            "required": false,
            "schema": {"type": "string"}
          },
          {
            "name": "location",
            "in": "query",
            "description": "Filter by location",
            "required": false,
            "schema": {"type": "string"}
          },
          {
            "name": "job_type",
            "in": "query",
            "description": "Filter by job type (full-time, part-time, contract, etc.)",
            "required": false,
            "schema": {"type": "string"}
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": false,
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "page_size",
            "in": "query",
            "description": "Number of items per page",
            "required": false,
            "schema": {"type": "integer", "default": 10}
          }
        ],
        "responses": {
          "200": {
            "description": "List of job postings",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "count": {"type": "integer"},
                    "next": {"type": "string", "nullable": true},
                    "previous": {"type": "string", "nullable": true},
                    "results": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Job"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/jobs/{id}/apply/": {
      "post": {
        "tags": ["Jobs"],
        "summary": "Apply to a job",
        "description": "Submit an application for a job posting",
        "security": [{"Bearer": []}],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Job ID",
            "required": true,
            "schema": {"type": "integer"}
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "resume": {
                    "type": "string",
                    "format": "binary",
                    "description": "Resume file (PDF or DOCX)"
                  },
                  "cover_letter": {
                    "type": "string",
                    "format": "binary",
                    "description": "Optional cover letter (PDF or DOCX)"
                  },
                  "message": {
                    "type": "string",
                    "description": "Optional message to the recruiter"
                  }
                },
                "required": ["resume"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Application submitted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JobApplication"
                }
              }
            }
          },
          "400": {"description": "Invalid input"},
          "401": {"description": "Authentication required"},
          "404": {"description": "Job not found"}
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {"type": "integer", "readOnly": true},
          "email": {"type": "string", "format": "email"},
          "first_name": {"type": "string"},
          "last_name": {"type": "string"},
          "is_active": {"type": "boolean"},
          "is_staff": {"type": "boolean"},
          "date_joined": {"type": "string", "format": "date-time"}
        }
      },
      "Job": {
        "type": "object",
        "properties": {
          "id": {"type": "integer", "readOnly": true},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "company": {"type": "string"},
          "location": {"type": "string"},
          "job_type": {"type": "string", "enum": ["full-time", "part-time", "contract", "internship", "temporary"]},
          "salary_min": {"type": "number", "format": "float"},
          "salary_max": {"type": "number", "format": "float"},
          "is_remote": {"type": "boolean"},
          "posted_date": {"type": "string", "format": "date-time"},
          "application_deadline": {"type": "string", "format": "date"}
        }
      },
      "JobApplication": {
        "type": "object",
        "properties": {
          "id": {"type": "integer", "readOnly": true},
          "job": {"type": "integer"},
          "applicant": {"type": "integer"},
          "status": {"type": "string", "enum": ["applied", "reviewed", "interviewed", "offered", "hired", "rejected"]},
          "applied_date": {"type": "string", "format": "date-time"},
          "message": {"type": "string", "nullable": true}
        }
      }
    },
    "parameters": {
      "page": {
        "name": "page",
        "in": "query",
        "description": "A page number within the paginated result set.",
        "required": false,
        "schema": {
          "type": "integer",
          "default": 1
        }
      },
      "page_size": {
        "name": "page_size",
        "in": "query",
        "description": "Number of results to return per page.",
        "required": false,
        "schema": {
          "type": "integer",
          "default": 20
        }
      }
    }
  }
}
